<title>Details page</title>
<h2 class="form-control text-center">Now that we know who yuo are, lets get some more details about you and your car.</h2>

<form>
    <div class="m-5">
        @using (Html.BeginForm("CalcQuote", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="birthDate">Date of birth</label>
                <input type="datetime" class="form-control" />
            </div>
            <div class="form-group">
                <label for="carYear">Car year</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label for="carMake">Car make</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label for="carModel">Car model</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-row align-baseline align-items-center">
                <div class="col-auto my-1">
                    <label class="mr-sm-2" for="inlineFormCustomSelect">Coverage</label>
                    <select class="custom-select mr-sm-2">
                        <option selected>Select coverage preference</option>
                        <option value="1">Full</option>
                        <option value="2">Liability</option>
                    </select>
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="no" checked>
                <label class="form-check-label" for="exampleRadios1">I have never had a DUI</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="yes">
                <label class="form-check-label" for="exampleRadios2">Yes I have had a DUI</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</form>